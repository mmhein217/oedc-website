{
  "version": 2,
  "builds": [
    {
      "src": "**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    }
  ],
  "images": {
    "sizes": [640, 750, 828, 1080, 1200],
    "domains": ["vercel.app"],
    "formats": ["image/webp"],
    "minimumCacheTTL": 60,
    "contentSecurityPolicy": "default-src 'self'; img-src 'self' data: https:;"
  }
}
